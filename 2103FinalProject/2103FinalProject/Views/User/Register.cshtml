
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/Register.css" />
<section class="vh-100">
    <div class="container-fluid">
        <div class="row" style="margin:0px;">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" action="/User/RegisterCode" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>
                        <h2>Let's get you started on your account!</h2>

                        <div class="form-outline mb-4">
                            <input name="FirstName" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">First Name</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input name="LastName" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Last Name</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="email"  name="EmailAdd" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Email Address</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="form2Example28" name="Password" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Password</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Register</button>
                        </div>

                        <p>Already have an account? <a onclick="window.location.href='/User/Login'" class="link-info">Login here</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Content/img/logincomputer.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left; float:right; width:60%; margin-top:15px; margin-bottom:15px;">
            </div>
        </div>
    </div>
</section>